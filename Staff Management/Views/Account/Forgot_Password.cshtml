
@{
    ViewBag.Title = "Forgot_Password";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<section class="vh-100">

    <div class="container-fluid h-custom">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-md-12 col-lg-6 col-xl-5 d-none d-md-block">
                <img src="~/Content/Forgot_password.svg"
                     class="img-fluid" alt="Sample image">
            </div>
            <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "user" }))
                {
                    <h1 class="text-primary">Forgot Password</h1>
                    <div data-mdb-input-init class="form-outline mb-4">
                        <label class="form-label" for="form3Example3">Email address</label>

                        @Html.TextBox("email", null, new { @class = "form-control form-control-lg", maxlength = "50", @placeholder = "Email", required = "required", type = "email", title = "Please enter email." })
                    </div>
                    <div class="d-flex justify-content-between align-items-center">


                        <button type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-lg"
                                style="padding-left: 2.5rem; padding-right: 2.5rem;">
                            Send me new password
                        </button>
                        <a href="@Url.Action("Login", "Account")" class="text-body">Login Page</a>

                    </div>
                }
                </div>
            </div>
        </div>
    </section>