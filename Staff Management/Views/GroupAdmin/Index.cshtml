                    Title: taskTitle,
                    Worker: taskWorker
                },
                success: function(response){
                    // Handle success response
                },
                error: function(error){
                    // Handle error response
                }
            });
            */
            $('#addTaskModal').modal('hide');
            alert('Task added successfully');
        });
