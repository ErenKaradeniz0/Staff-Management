<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Staff Management</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        html, body {
            height: 100%;
            margin: 0;
        }

        .body-content {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .content-wrapper {
            flex: 1;
        }

        footer {
            width: 100%;
            height: 60px;
            background-color: #007bff;
            color: white;
            text-align: center;
            padding: 10px;
            position: relative;
            bottom: 0;
        }
    </style>
</head>
<body>
    <div class="body-content">
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand btn-lg" href="">Group Admin</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mynavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="mynavbar">
                    <ul class="navbar-nav me-auto"></ul>
                    <a class="btn btn-primary btn-lg m-lg-2" href="@Url.Action("ProfilePage", "Staff")">
                        <i class="fas fa-user"></i> Profile
                    </a>
                    <a class="btn btn-danger btn-lg" href="@Url.Action("Logout", "Account")"> <i class="fas fa-sign-out-alt"></i> Log out </a>

                </div>
            </div>
        </nav>
        <div class="content-wrapper">
            @RenderBody()
        </div>
        <footer class="text-md-start justify-content-between py-4 px-4 px-xl-5">
            &copy; @DateTime.Now.Year - Staff Management
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    @{
        string controllerName = ViewContext.RouteData.Values["controller"].ToString();
        string navText = "Default Text";
        string hrefText = "Default Text";

        switch (controllerName)
        {
            case "GroupAdmin":
                navText = "Group Admin";
                hrefText = "/GroupAdmin/Index";
                break;
            case "Staff":
                navText = "Staff";
                hrefText = "/Staff/Index";
                break;
            case "SystemAdmin":
                navText = "System Admin";
                hrefText = "/SystemAdmin/Index";
                break;
            default:
                navText = "Default Text";
                hrefText = " ";
                break;
        }
    }
    <script>
        document.querySelector('.navbar-brand').innerText = '@navText';
        document.querySelector('.navbar-brand').href = '@hrefText';
    </script>
</body>
</html>
