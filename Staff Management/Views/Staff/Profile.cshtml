<div class="container mt-5">
    <h2>Profilini Güncelle</h2>
    <form>
        <div class="form-group">
            <label for="username">Kullanıcı Adı</label>
            <input type="text" class="form-control" id="username" placeholder="Kullanıcı adınızı girin">
        </div>
        <div class="form-group">
            <label for="surname">Soyadı</label>
            <input type="text" class="form-control" id="surname" placeholder="Soyadınızı girin">
        </div>
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" class="form-control" id="email" placeholder="Email adresinizi girin">
        </div>
        <div class="form-group">
            <label for="password">Şifre</label>
            <input type="password" class="form-control" id="password" placeholder="Şifrenizi girin">
        </div>
        <div class="form-group">
            <label for="salary">Maaş</label>
            <label id="salary" class="form-control"></label>
        </div>
        <button type="submit" class="btn btn-primary">Güncelle</button>
    </form>
</div>
