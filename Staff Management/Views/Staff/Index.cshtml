@model IEnumerable<Staff_Management.Models.Tasks>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>
    .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

        .header .btn {
            margin-left: auto;
        }

    .table {
        margin-top: 20px;
    }
</style>

<div class="container">
    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-warning font-weight-bold mt-2" role="alert">
            @ViewBag.ErrorMessage
        </div>
    }
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Status</th>
                <th>Title</th>
                <th>Buttons</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var task in Model)
            {
                <tr>
                    <td>
                        @{
                            string CssClass;
                            string statusText;
                            switch (task.Status)
                            {
                                case 1:
                                    CssClass = "text-primary";
                                    statusText = "Open";
                                    break;
                                case 2:
                                    CssClass = "text-success";
                                    statusText = "Completed";
                                    break;
                                case 3:
                                    CssClass = "text-danger";
                                    statusText = "Problem";
                                    break;
                                default:
                                    CssClass = "";
                                    statusText = "Unknown";
                                    break;
                            }
                        }
                        <span class="@CssClass">@statusText</span>
                    </td>
                    <td>@task.Title</td>
                    <td>
                        <a href="@Url.Action("TaskDetails", "Staff", new { taskId = task.TaskId })" class="btn btn-sm">
                            <i class="fas fa-eye"></i> Görevi Görüntüle
                        </a>
                        <form action="@Url.Action("UpdateTaskStatus", "Staff")" method="post" style="display:inline;">
                            <input type="hidden" name="taskId" value="@task.TaskId" />
                            @if (task.Status != 2)
                            {
                                <button type="submit" class="btn btn-success btn-sm">
                                    <i class="fas fa-check"></i> Görev Tamamlandı
                                </button>
                                <a href="@Url.Action("ReportIssue", "Staff", new { taskId = task.TaskId })" class="btn btn-warning btn-sm">
                                    <i class="fas fa-exclamation"></i> Sorun Bildir
                                </a>
                            }
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>